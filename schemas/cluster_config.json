{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "kafka-connect-cluster-lambda-config",
  "type": "object",
  "title": "kafka-connect-cluster-lambda-config",
  "description": "Schema of the event payload expected to interact with the Lambda Function",
  "required": [
    "hostname"
  ],
  "properties": {
    "hostname": {
      "type": "string",
      "format": "idn-hostname"
    },
    "port": {
      "type": "number",
      "default": 8083
    },
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "protocol": {
      "type": "string",
      "default": "http"
    },
    "ignore_ssl_errors": {
      "type": "boolean",
      "default": false
    }
  }
}
